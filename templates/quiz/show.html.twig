{% extends 'base.html.twig' %}

{% block title %}Quizz{% endblock %}

{% block body %}

    <div class="jumbotron">
        <div class="row">
            <div class="col ml-4">
                <h1>Quizz</h1>
                <h2></h2>
            </div>
        </div>
    </div>

<div class="container mt-4">

    {% if not form.vars.valid %}
        <ul>
            {# Loop through every form item #}
            {% for child in form.children %}
                {# Display the errors of the form item #}
                {%for error in child.vars.errors%}
                    <li>{{error.message}}</li>
                {%endfor%}
            {%endfor%}
        </ul>
    {%endif%}


    <div class="row">
        <div class="col">

            <h2>Quiz
                {{ quizquestion.quiz.id}}
                Question
                {{ quizquestion.question.id }}
                QuizQuestion
                {{ quizquestion.id}}
            </h2>
                <p>{{ quizquestion.question.label }}</p>

            {{ form_start(form) }}

            <button class="btn btn-primary float-right">Valider</button>


            {{ form_end(form) }}
        </div>
    </div>



    <nav class="nav nav-bars mb-4"></nav>
</div>

{% endblock %}