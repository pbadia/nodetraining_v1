{% block body %}

    <div class="container mt-4">
        <h2>Mes quizz</h2>
        <table class="table table-striped">
            <thead>
                <tr>
                    <td>#</td>
                    <td>Thèmes associés <i class="fas fa-tag"></i></td>
                    <td>Score <i class="fas fa-trophy"></i></td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
            {% for quiz in quizzes %}
                <tr>
                    <td>{{ quiz.number }}</td>
                    <td>{{ quiz.themes }}</td>
                    <td>
                    <h6
                                {% if quiz.score == 10 %}
                            class="gold-medal"
                        {% elseif quiz.score >= 8 %}
                            class="silver-medal"
                        {% elseif quiz.score >= 6 %}
                            class="bronze-medal"
                                {% endif %}>{{ quiz.score }}</h6></td>
                    <td>
                         <a href="{{ path ('quiz.result', {id: quiz.id}) }}" class="btn btn-primary">Voir le quizz</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        {# display navigation #}
        <div class="navigation mt-4 d-flex justify-content-center">
            {{ knp_pagination_render(quizzes) }}
        </div>

    </div>

{% endblock %}