<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}NodeTraining{% endblock %}</title>

        {% block stylesheets %}
            <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
        {% endblock %}

        {{ encore_entry_link_tags('app') }}
    </head>
    <body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">

        <a class="navbar-brand mb-0 h1" href="{{ path('home') }}">
            <img src="{{ asset('node_logo_small.png') }}" width="26" height="30" class="d-inline-block align-top" alt="" loading="lazy">
            Training
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                {% if is_granted('IS_AUTHENTICATED_FULLY') and is_granted('ROLE_ADMIN') %}
                    <li class="nav-item">
                        <a class="nav-link {% if app.request.attributes.get('_route') starts with 'admin' %}active{% endif %}" href="{{ path('admin.index') }}">Administration</a>
                    </li>
                {% endif %}
                <li class="nav-item">
                    {% if app.user %}
                        <a class="nav-link" href="#">Nouveau quizz</a>
                    {% else %}
                        <a class="nav-link" href="{{ path('question.index') }}">Jouer sans se connecter<span class="sr-only">(current)</span></a>
                    {%  endif %}
                </li>

            </ul>
            {% if app.user %}
                <a class="btn btn-primary" id="btn-login" href="{{ path('app_logout') }}">Se d√©connecter ({{ app.user.username }})</a>
            {% else %}
                <a class="btn mr-3" href="{{ path('app_register') }}">S&#39;inscrire</a>
                <a class="btn btn-primary" id="btn-login" href="{{ path('app_login') }}">Se connecter</a>
            {% endif %}
        </div>
    </nav>

    {% block body_header %}
    {% endblock %}

    <div class="container mt-4">
        {% block body %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </div>

        {% block javascripts %}


            <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>

            {{ encore_entry_script_tags('app') }}
        {% endblock %}

    </body>
</html>
